QListView {
    background: white;
    border: none;
}

FileIconItem[showBackground=true] QTextEdit {
    background: "#0076F9";
    border-radius: 4px;
}

FileIconItem QLabel {
    background: transparent;
}

FileIconItem QTextEdit {
    background: transparent;
    color: white;
    selection-background-color: #61B5F8;
}

FileIconItem QTextEdit[readOnly=false] {
    background: #e6e6ec;
    border: 1px solid rgba(44, 167, 248, 0.3);
    border-radius: 4px;
    color: black;
    min-height: 42px;
}


QHeaderView {
    background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                  stop:0 #f8f8f8, stop:1 rgba(255, 255, 255, 0.8));
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    max-height: 21px;
}

QHeaderView::section {
    color: #797979;
    background: transparent;
    border: none;
    padding-left: 10px inset transparent;
    border-right: 1px inset rgba(0, 0, 0, 0.1);
    margin-bottom: 1px;
}

QHeaderView::section:checked {

}

DFileView QLabel#contentLabel {
    font-family: SourceHanSansSC-Light;
    font-size: 20px;
    color: #D0D0D0;
}

QLineEdit#DListItemDelegate_Editor {
    color: white;
    background: #0076F9;
    border-radius: 4px;
    selection-background-color: rgba(255,255,255,0.4);
}
